<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:layout_gravity="left"
        android:text="@string/tvName"
        android:transitionName="transitionName"
        />

    <TextView
        android:layout_toRightOf="@+id/tvName"
        android:id="@+id/tvDash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:layout_gravity="left"
        android:text="@string/tvDash"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        />

    <TextView
        android:layout_toRightOf="@+id/tvDash"
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:layout_gravity="left"
        android:text="@string/tvTime"
        />
</RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:layout_gravity="left"
        android:text="@string/tvTitle"
        android:transitionName="transitionTitle"
        />

    <TextView
        android:id="@+id/tvDescp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="transitionDescp"
        android:textSize="25sp"
        android:layout_gravity="left"
        android:text="@string/tvDescp"
        android:layout_marginBottom="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent">

    </View>
</LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>